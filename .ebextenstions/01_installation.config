packages:
  yum:
    gcc: []
    gcc-c++: []
    python3-devel: []
    mariadb-devel: []
    mysql-devel: []
    libffi-devel: []
    libjpeg-devel: []
    zlib-devel: []
    pkgconf-pkg-config: []

container_commands:
  01_migrate:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py migrate"
    leader_only: true

  02_collectstatic:
    command: "source /var/app/venv/*/bin/activate && python3 manage.py collectstatic --noinput"
    leader_only: true
